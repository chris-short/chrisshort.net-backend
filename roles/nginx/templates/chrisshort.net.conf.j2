    # From Elsewhere Back to chrisshort.net
    rewrite ^/archives/2004/09/my-pet-jawa-featured-on-msnbc-kinda.php / permanent;
    # Back to Tumblr
    rewrite ^/post/(.*)$ http://chrisshort.tumblr.com/post/$1 permanent;
